menu "Cikon IoT Supervisor RF433 Adapter"
    config RF433_GPIO_PIN
        int "RF433 Receiver GPIO Pin"
        default 23 if IDF_TARGET_ESP32
        default 4 if IDF_TARGET_ESP32C3
        default 23
        help
            GPIO pin connected to RF433 receiver data output.
            Default: GPIO23 for ESP32, GPIO4 for ESP32-C3

endmenu
