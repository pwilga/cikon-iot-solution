menu "Cikon IoT Supervisor Core Configuration"
    config SUPERVISOR_QUEUE_LENGTH
        int "Supervisor command queue length"
        default 8
        range 1 20
        help
            Length of the supervisor command queue.
            Typical: 8.

    config MAX_COMMANDS
        int "Maximum number of commands"
        default 20
        range 1 100
        help
            Maximum number of commands that can be queued for execution.

    config MAX_TELE
        int "Maximum number of telemetry appenders"
        default 20
        range 1 100
        help
            Maximum number of telemetry appenders that can be registered.

    config SUPERVISOR_MAX_ADAPTERS
        int "Maximum number of platform adapters"
        default 8
        range 4 16
        help
            Maximum number of platform adapters that can be registered.
            Typical: 8.

    config SUPERVISOR_TASK_STACK_SIZE
        int "Supervisor task stack size"
        default 4096
        range 2048 8192
        help
            Stack size for the main supervisor task.

    config SUPERVISOR_TASK_PRIORITY
        int "Supervisor task priority"
        default 5
        range 1 24
        help
            Priority of the supervisor task.

    config SUPERVISOR_SAFE_MODE_THRESHOLD
        int "Safe mode crash threshold"
        default 3
        range 2 10
        help
            Number of crashes/panics before activating safe mode.
            Safe mode disables hardware adapters and keeps only WiFi/Monitor/OTA active.

    config SUPERVISOR_SAFE_MODE_STABLE_TIME_S
        int "Safe mode auto-clear time (seconds)"
        default 90
        range 30 300
        help
            Time in seconds of stable operation before auto-clearing safe mode.
            After this time without crashes, boot counter resets to 0.

endmenu
